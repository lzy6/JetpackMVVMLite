<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jetpackmvvmlight">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.JetPackMVVMLight">
        <activity
            android:name=".ui.activity.main.view.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.activity.main.view.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activity.main.view.NetWorkActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activity.main.view.RvDetailActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activity.main.view.AnnouncementActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>